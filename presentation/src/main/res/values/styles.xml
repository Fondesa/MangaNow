<resources>

    <style name="AppTheme" parent="CommonTheme">

    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">?colorPrimary</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="CommonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/NavigationDrawerToggle</item>
    </style>

    <style name="NavigationDrawerToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
</resources>
