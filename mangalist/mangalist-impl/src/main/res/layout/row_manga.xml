<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imageView"
        android:layout_width="@dimen/cell_manga_image_size"
        android:layout_height="@dimen/cell_manga_image_size"
        android:layout_marginStart="@dimen/cell_manga_padding_horizontal"
        android:layout_marginLeft="@dimen/cell_manga_padding_horizontal"
        android:layout_marginTop="@dimen/cell_manga_padding_vertical"
        android:layout_marginBottom="@dimen/cell_manga_padding_vertical"
        app:backgroundImage="@android:color/white"
        app:placeholderImage="@drawable/ic_placeholder_preview_manga"
        app:roundAsCircle="true"
        app:roundingBorderColor="@color/primary"
        app:roundingBorderWidth="2dp" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/cell_manga_padding_horizontal"
        android:layout_marginLeft="@dimen/cell_manga_padding_horizontal"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/text_size_medium"
        tools:text="Dummy manga title" />

    <ImageView
        android:id="@+id/favouriteButton"
        android:layout_width="@dimen/cell_manga_favorite_size"
        android:layout_height="@dimen/cell_manga_favorite_size"
        android:layout_gravity="center_vertical"
        android:paddingStart="@dimen/cell_manga_padding_horizontal"
        android:paddingLeft="@dimen/cell_manga_padding_horizontal"
        android:paddingTop="@dimen/cell_manga_padding_vertical"
        android:paddingEnd="@dimen/cell_manga_padding_horizontal"
        android:paddingRight="@dimen/cell_manga_padding_horizontal"
        android:paddingBottom="@dimen/cell_manga_padding_vertical"
        tools:src="@drawable/ic_favorite_on" />
</LinearLayout>